<view class="container">
  <view class="page-section">
    <swiper indicator-dots="true"
      autoplay="true" interval="2000" duration="500">
      <block wx:for="{{background}}" wx:key="*this">
        <swiper-item>
          <view class="swiper-item {{item}}"></view>
        </swiper-item>
      </block>
    </swiper>
  </view>
</view>
